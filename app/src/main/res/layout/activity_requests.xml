<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cheetah"
    >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/ngo_name"
        android:hint="Organisation Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"
        />

    <EditText
        android:id="@+id/ngo_id"
        android:hint="Registration Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ngo_name"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/user_name"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ngo_id"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"/>




        <RadioGroup
            android:id="@+id/desigRadioGrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/presRadioBtn"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="President"
                android:buttonTint="#fafafa"
                android:textColor="#fafafa"
                />
            <RadioButton
                android:id="@+id/LeaderRadioBtn"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Leader"
                android:textColor="#fafafa"
                android:buttonTint="#fafafa"
                />
        </RadioGroup>

    <EditText
        android:id="@+id/president_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desigRadioGrp"
        android:layout_margin="8dp"
        android:hint="President Id"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"

        />

    <EditText
        android:id="@+id/user_email"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/president_id"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"/>

    <EditText
        android:id="@+id/first_password"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_action_lock"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"
        />


    <EditText
        android:id="@+id/confirm_password"
        android:hint="confirm password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_password"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_action_lock"

        android:layout_margin="8dp"
        android:background="#11000000"
        android:textColorHint="#f5f5f5"
        />

    <TextView
        android:id="@+id/head_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head Office Location"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/confirm_password"
        android:background="#11000000"
        android:textColor="#f5f5f5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        />


        <ImageButton
            android:id="@+id/current_loaction"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#bcaaa4"
            android:src="@drawable/ic_my_location_black_24dp"
            android:layout_toRightOf="@id/head_addr"
            android:layout_below="@id/confirm_password"
            android:layout_marginLeft="8dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#bcaaa4"
            android:textColor="#fafafa"
            android:layout_marginLeft="8dp"
            android:textColorHint="@color/colorPrimary"
            android:text="Find on Map"
            android:layout_below="@id/confirm_password"
            android:layout_toRightOf="@id/current_loaction"/>
        <Button
            android:id="@+id/log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:layout_below="@id/head_addr"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fafafa"
            android:background="#bcaaa4"

            />


</RelativeLayout>
</ScrollView>