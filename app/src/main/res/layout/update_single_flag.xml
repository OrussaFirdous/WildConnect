<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/flag_to"
    android:layout_height="250dp"
    android:padding="16dp"
    >

    <ImageButton
        android:id="@+id/flag_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_flag_black_24dp"
        android:backgroundTint="#11000000"/>

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAG"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"
        android:textColor="#fafafa"
        android:textSize="30sp"
        android:textColorHighlight="@drawable/ic_flag_black_24dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/flag_button"
        />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Expected :"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#fafafa"
        android:layout_below="@id/tag"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   date   "
        android:textSize="16sp"
        android:textColor="#fafafa"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/tag"
        android:layout_toRightOf="@id/time_text"
        android:layout_marginTop="8dp"
        />
    <ImageButton
        android:id="@+id/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_today_black_24dp"
        android:layout_toRightOf="@id/date"
        android:layout_below="@id/tag"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#11000000"
        />
    <ImageButton
        android:id="@+id/delete_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_below="@id/calender"
        android:backgroundTint="#11000000"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"/>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/delete_bttn"
       android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/success"
        android:textColor="#fafafa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_bttn"
        android:backgroundTint="#11000000"
        android:text="success"
        />

    <Button
        android:id="@+id/failure"
        android:layout_width="wrap_content"
        android:textColor="#fafafa"
        android:backgroundTint="#11000000"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/success"
        android:text="failed" />
   </LinearLayout>
</RelativeLayout>